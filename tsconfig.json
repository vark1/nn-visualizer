{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "lib": ["es2016", "dom"],
        "moduleResolution": "node",
        "allowJs": true, 
        "checkJs": false,
        "outDir": "dist",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "*": ["src/js/*"]
        },
        "declaration": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
    ],
}